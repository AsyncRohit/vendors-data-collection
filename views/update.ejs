    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
<div class="main w-full min-h-screen bg-blue-300  text-center">
    <div class=" pt-5 pb-5 w-full fixed top-0 left-0 bg-blue-700 flex justify-between">
        <a class="text-2xl  ml-10 text-gray-900 hover:text-gray-200 transition-all duration-900 tracker-tighter" href="/users">←Back</a>
            <h1 class="text-3xl  text-black-900  items-center">Edit details</h1>
            <a class="text-2xl mr-5 text-gray-900 hover:text-gray-200 transition-all duration-900 tracker-tighter" href="/">←Home</a>
    </div>
        <div class="field pt-40 flex justify-center items-center text-center">
            <form action="/update/<%= user._id%>" method="post" >
                <input class="px-9 py-3  rounded-md outine-none  block" type="text" placeholder="name" name="name" >
                <input class="px-9 py-3  rounded-md outine-none  block mt-8" type="text" placeholder="Shop Name" name="shopname">
                <input class="px-9 py-3  rounded-md outine-none  block mt-8" type="text" placeholder="address" name="address">
                <input class="px-9 py-3  rounded-md outine-none  block mt-8" type="number" placeholder="age" name="age">
                <input class="px-7 py-3  rounded-md bg-blue-700 text-white mt-8" type="submit" value="Submit">
            </form>
        </div>

</div>
    
